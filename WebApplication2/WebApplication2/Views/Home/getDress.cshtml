<script>
    function upload(Id) {

        alert(Id);
        
        $.ajax({
            url: '@Url.Action("Image", "Home")',
            type: 'POST',
            dataType: 'HTML',
             data: {Id},
            success: function (data) {

                window.location.assign("../Image/" + Id)

             },
             error: function (hata, ajaxOptions, thrownError) {
                 alert(hata.status);
                 alert(thrownError);
                 alert(hata.responseText);
             }
            });
    


    }


</script>
