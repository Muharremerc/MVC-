@model List<WebApplication2.Models.HomeModel.Dress>

@foreach (var item in Model)
{
    if (item.Image != null)
    {
        <div class="col-md-4 col-sm-6">
            <a class="banner banner-1" href="javascript:getDress(@item.Id)">
                <img src="../../Image/@item.Image" alt="">
                <div class="banner-caption text-center">
                    <h2 class="white-color">@item.Name</h2>
                </div>
            </a>
        </div>
    }
    else
    {
        <div class="col-md-4 col-sm-6">
            <a class="banner banner-1" href="javascript:getDress(@item.Id)">
                <img src="../../Image/default.jpg" alt="">
                <div class="banner-caption text-center">
                    <h2 class="white-color">@item.Name</h2>
                </div>
            </a>
        </div>

    }
}
